pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git'
            }
        }

        stage('Build & Deploy') {
            steps {
                sh '''
                docker compose down
                docker compose build
                docker compose up -d
                '''
            }
        }
    }
}
